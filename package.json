{
  "name": "checkout-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:https": "next dev --experimental-https --experimental-https-key=./.cert/localhost+2-key.pem --experimental-https-cert=./.cert/localhost+2.pem",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run lint && npm run typecheck && jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:local": "SKIP_SERVER=1 playwright test",
    "test:e2e:staging": "STAGING_URL=1 playwright test",
    "test:coverage": "jest --coverage",
    "test:e2e:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "upload-sourcemaps": "node scripts/upload-sourcemaps.mjs"
  },
  "dependencies": {
    "@amplitude/session-replay-browser": "1.22.10",
    "@launchdarkly/node-server-sdk": "^9.10.3",
    "@varsitytutors/event-tracker": "2.2.0",
    "braintree-web": "^3.133.0",
    "jose": "^6.1.2",
    "launchdarkly-react-client-sdk": "^3.9.0",
    "lucide-react": "^0.554.0",
    "next": "^15.5.9",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.50.1",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "14.6.1",
    "@types/braintree-web": "^3.96.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.9",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "autoprefixer": "^10.4.20",
    "baseline-browser-mapping": "2.9.18",
    "critters": "^0.0.23",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.1.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-playwright": "^2.3.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-testing-library": "^7.13.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.47.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{ts,tsx}": "bash -c 'tsc --noEmit'",
    "*.{json,css,md}": "prettier --write"
  }
}
